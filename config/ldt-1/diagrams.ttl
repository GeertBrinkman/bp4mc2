stage:diagram-query a elmo:Query;
	elmo:query '''
		CONSTRUCT {
			?s ?p ?o.
			?sgeo ?pgeo ?ogeo.
		}
		WHERE {
			GRAPH <@STAGE@> {
				<@REPRESENTATION@> rdfs:seeAlso ?shapesgraph
				BIND (iri(concat(str(?shapesgraph),'-yed')) as ?geograph)
			}
			{
				{
					GRAPH ?shapesgraph {
						?s ?p ?o
						FILTER (!isLiteral(?o) || lang(?o)="" || lang(?o)="@LANGUAGE@")
					}
				}
				UNION
				{
					GRAPH ?geograph {
						?sgeo ?pgeo ?ogeo
					}
				}
			}
		}
	'''
.

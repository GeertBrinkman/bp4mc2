@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix frbrap: <http://bp4mc2.org/profiles/frbr-ap-sc#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix frbr: <http://purl.org/vocab/frbr/core#>.

#---------------------
# IMPORT
#---------------------

#imported from frbr
frbr:Work a rdfs:Class;
  rdfs:subClassOf frbr:Endeavour
.
frbr:Expression a rdfs:Class;
  rdfs:subClassOf frbr:Endeavour
.

# ========================================
# Shape outside this model, but used as reference
# ========================================

frbrap:Concept a sh:NodeShape;
  sh:name "skos:Concept";
  sh:property frbrap:Concept_dctsource;
.
frbrap:Concept_dctsource a sh:PropertyShape;
  rdfs:label "bron op het web"@nl;
  rdfs:label "source on the web"@en;
  sh:name "dcterms:source";
  sh:path dcterms:source;
  sh:node [ sh:xone (frbrap:EndeavourAsSource frbrap:DocumentAsSource)];
  rdfs:comment "Een begrip kan zijn ontleend aan een op het web vindbare bron. Dit kan een (versie van) een beschrijving van een specifiek begrip of een document waarin een beschrijving van het begrip is te vinden."@nl;
  rdfs:comment "A concept can be derived from a source that can be found on the web. This can be a (version of) a description of a specific concept or a document in which a description of the concept can be found."@en;
  skos:example "<jci1.3:c:BWBR0005416&titel=IV&hoofdstuk=XV&paragraaf=3&artikel=222>"@nl
.

# ========================================
# Source document
# ========================================

frbrap:DocumentAsSource a sh:NodeShape;
  rdfs:label "Brondocument"@nl;
  rdfs:label "Source document"@en;
  sh:name "foaf:Document ( source document)";
# moet hier nog een sh:targetClass foaf:Document;?
  rdfs:comment "Een brondocument dat vindbaar is op het web."@nl;
  rdfs:comment "A source document that can be found on the web."@en;
  skos:example "De volledige tekst van het Burgerlijk Wetboek."@nl;
  sh:property frbrap:DocumentAsSource_label
.
frbrap:DocumentAsSource_label a sh:PropertyShape;
  rdfs:label "label"@nl;
  rdfs:label "label"@en;
  sh:name "rdfs:label";
  sh:path rdfs:label;
  rdfs:comment "Een brondocument heeft een voor mensen leesbaar label."@nl;
  rdfs:comment "A source document has a human-readable label."@en;
  skos:example "Burgerlijk Wetboek 1838."@nl;
  sh:minCount 1;
  sh:severity sh:Violation;
  sh:message "Een brondocument heeft een voor mensen leesbaar label."@nl;
  sh:message "A source document has a human-readable label."@en
.

# ========================================
# Endeavour (source)
# ========================================

frbrap:EndeavourAsSource a sh:NodeShape;
  rdfs:label "bibliografische bron"@nl;
  rdfs:label "bibliographic source"@en;
  sh:name "frbr:Endeavour";
  sh:targetClass frbr:Endeavour;
  rdfs:comment "Een via het web identificeerbare bibliografische bron."@nl;
  rdfs:comment "A bibliographic source that can be identified via the web."@en;
  skos:example "Atrikel 1 van het burgerlijk wetboek of atrikel 1 van het burgerlijk wetboek van 1838"@nl;
  sh:property frbrap:EndeavourAsSource_label;
  sh:property frbrap:EndeavourAsSource_isTopicOf
.

frbrap:EndeavourAsSource_label a sh:PropertyShape;
  rdfs:label "label"@nl;
  rdfs:label "label"@en;
  sh:name "rdfs:label";
  sh:path rdfs:label;
  rdfs:comment "Een bibliografische bron heeft een voor mensen leesbare naam."@nl;
  rdfs:comment "A bibliographic source has a human readable label."@en;
  skos:example "Artikel 1 van het Burgerlijk Wetboek van 1838"@nl;
  sh:minCount 1;
  sh:severity sh:Violation;
  sh:message "Een bibliografischebron heeft een voor mensen leesbare naam."@nl;
  sh:message "A bibliographic source has a human readable label."@en
.

frbrap:EndeavourAsSource_isTopicOf a sh:PropertyShape;
  rdfs:label "onderwerp van"@nl;
  rdfs:label "topic of"@en;
  sh:name "foaf:isPrimaryTopicOf";
  sh:path foaf:isPrimaryTopicOf;
  sh:node frbrap:DocumentAsSource;
  rdfs:comment "Een bibliografische bron kan een onderwerp zijn van een brondocument."@nl;
  rdfs:comment "A bibliographic source can be a subject of a source document."@en;
  skos:example "Artikel 1 BW is een onderwerp in het Burgerlijk Wetboek"@nl;
  sh:maxCount 1;
  sh:severity sh:Violation;
  sh:message "Een bibliografische bron kan een onderwerp zijn van maximaal 1 brondocument."@nl;
  sh:message "A bibliographic source can be a subject of up to 1 source document."@en
.
# ========================================
# Work
# ========================================

frbrap:WorkAsSource a sh:NodeShape;
  rdfs:label "algemeen bibliografische bron"@nl;
  rdfs:label "generic bibliographic source"@en;
  sh:name "frbr:Work";
  sh:targetClass frbr:Work;
  rdfs:comment "Een via het web identificeerbare bibliografische bron, zonder dat expliciet wordt verwezen naar een specifieke versie."@nl;
  rdfs:comment "A bibliographic source identifiable via the web, without an explicit reference to a specific version."@en;
  skos:example "Artikel 1 van het Burgerlijk Wetboek"@nl
.

# ========================================
# Expression
# ========================================

frbrap:ExpressionAsSource a sh:NodeShape;
  rdfs:label "versie bibliografische bron"@nl;
  rdfs:label "version bibliographic source"@en;
  sh:name "frbr:Expression";
  sh:targetClass frbr:Expression;
  rdfs:comment "Een specifieke versie van een op het web identificeerbare bibliografische bron."@nl;
  rdfs:comment "A specific version of a bibliographic source identifiable on the web."@en;
  skos:example "Artikel 1 van het Burgerlijk Wetboek van 1838"@nl
.
